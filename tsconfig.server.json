{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@db/*": ["./db/*"],
      "@/*": ["./server/*"]
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true
  },
  "include": ["server/**/*", "db/**/*"],
  "exclude": ["node_modules", "client", "dist"]
} 