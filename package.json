{
  "name": "endorsehub",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"cd server && npm run dev\" \"cd client && vite --port 5173 --strictPort --host\"",
    "build": "npm install && npm run build:client && npm run build:server",
    "build:client": "cd client && npm install && NODE_ENV=production npm run build",
    "build:server": "cd server && npm install && npm run build",
    "start": "NODE_ENV=production node dist/index.js",
    "prestart": "npm run build",
    "check": "tsc",
    "db:push": "drizzle-kit push"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@replit/vite-plugin-runtime-error-modal": "^0.0.3",
    "@replit/vite-plugin-shadcn-theme-json": "^0.0.4",
    "@tailwindcss/typography": "^0.5.15",
    "@vitejs/plugin-react": "^4.3.4",
    "drizzle-kit": "^0.30.1",
    "react": "^19.0.0",
    "stripe": "^17.5.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^6.0.6",
    "vite-plugin-checker": "^0.8.0",
    "ws": "^8.18.0"
  }
}
