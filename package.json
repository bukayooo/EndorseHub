{
  "name": "rest-express",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS=\"--experimental-specifier-resolution=node --preserve-symlinks\" concurrently \"cd server && tsx watch --tsconfig ../tsconfig.server.json index.ts\" \"cd client && vite --port 5173 --strictPort --host\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "migrate": "tsx scripts/migrate.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "memorystore": "^1.6.7",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "stripe": "^14.10.0",
    "wouter": "^3.3.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/node": "^20.17.10",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.7",
    "postgres": "^3.4.5",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
}
