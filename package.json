{
  "name": "rest-express",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_OPTIONS=\"--experimental-specifier-resolution=node --preserve-symlinks\" concurrently -n \"server,client\" \"cd server && cross-env PORT=80 NODE_ENV=development tsx watch --tsconfig ../tsconfig.server.json index.ts\" \"cd client && cross-env VITE_API_URL=/api vite --port 5173 --strictPort --host 0.0.0.0\"",
    "build": "cross-env NODE_ENV=production npm run clean && npm run build:deps && npm run build:client && npm run build:server && npm run copy:client",
    "build:deps": "cd client && npm install",
    "build:client": "cd client && cross-env NODE_ENV=production VITE_API_URL=/api vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "copy:client": "mkdir -p dist/client && cp -r client/dist/* dist/client/ && echo 'Client files copied to dist/client'",
    "clean": "rm -rf dist client/dist",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "migrate": "tsx scripts/migrate.ts"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "@tanstack/react-query": "^5.62.14",
    "@types/cookie-parser": "^1.4.8",
    "@types/helmet": "^0.0.48",
    "@types/react": "^19.0.2",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.5.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.17.3",
    "helmet": "^8.0.0",
    "http-proxy-middleware": "^2.0.6",
    "memorystore": "^1.6.7",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pino": "^9.6.0",
    "stripe": "^14.10.0",
    "wouter": "^3.3.5",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.17.10",
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/node": "^20.17.10",
    "@types/passport": "^1.0.16",
    "@types/passport-local": "^1.0.38",
    "@types/ws": "^8.5.10",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.7",
    "postgres": "^3.4.5",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3"
  }
}
