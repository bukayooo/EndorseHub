{
  "name": "rest-express",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS=\"--experimental-specifier-resolution=node --preserve-symlinks\" concurrently \"cd server && tsx watch --tsconfig ../tsconfig.server.json index.ts\" \"cd client && vite --port 5173 --strictPort --host\"",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && vite build",
    "build:server": "tsc -p tsconfig.server.json && cp server/package.json dist/",
    "start": "cd dist && node index.js",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio",
    "migrate": "tsx scripts/migrate.ts"
  },
  "dependencies": {
    "@replit/vite-plugin-runtime-error-modal": "^0.0.3",
    "@replit/vite-plugin-shadcn-theme-json": "^0.0.4",
    "@tailwindcss/typography": "^0.5.15",
    "@vitejs/plugin-react": "^4.3.4",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.1",
    "react": "^19.0.0",
    "stripe": "^17.5.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "vite": "^6.0.7",
    "vite-plugin-checker": "^0.8.0"
  }
}
