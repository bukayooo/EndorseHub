
{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@db/*": ["./db/*"]
    }
  },
  "include": ["server/**/*", "db/**/*"],
  "exclude": ["dist", "node_modules", "client"]
}
