
{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./dist",
    "baseUrl": ".",
    "allowImportingTsExtensions": false,
    "emitDeclarationOnly": false,
    "noEmit": false,
    "paths": {
      "@db/*": ["./db/*"],
      "@types/*": ["./types/*"]
    }
  },
  "include": ["server/**/*", "db/**/*", "types/**/*"],
  "exclude": ["dist", "node_modules", "client"]
}
