modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run start"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "cloudrun"
build = [
    "sh",
    "-c",
    "npm install -g typescript && rm -rf node_modules client/node_modules server/node_modules && npm install && cd client && npm install && npm run build && cd ../server && npm install && cd .. && NODE_ENV=production npm run build"
]
run = ["sh", "-c", "NODE_ENV=production PORT=80 node dist/index.js"]
ignorePorts = false

[[ports]]
localPort = 80
externalPort = 80

[[ports]]
localPort = 443
externalPort = 443

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5173
externalPort = 5173

[env]
NODE_ENV = "production"

[languages.javascript]
pattern = "**/{*.js,*.jsx,*.ts,*.tsx}"
syntax = "javascript"

[languages.javascript.languageServer]
start = ["typescript-language-server", "--stdio"]
