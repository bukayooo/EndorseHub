{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@db/*": ["./db/*"],
      "@routes/*": ["./routes/*"]
    },
    "typeRoots": ["./node_modules/@types", "../node_modules/@types", "./types.d.ts"]
  },
  "include": ["./**/*.ts", "types.d.ts"],
  "exclude": ["node_modules"]
} 