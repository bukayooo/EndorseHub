{
  "name": "endorsehub-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "NODE_OPTIONS=\"--experimental-specifier-resolution=node --preserve-symlinks\" tsx watch --clear-screen=false index.ts",
    "build": "REPLIT_ENVIRONMENT=production esbuild index.ts --platform=node --packages=external --bundle --format=esm --outdir=../dist",
    "start": "REPLIT_ENVIRONMENT=production NODE_ENV=production node ../dist/index.js",
    "restart": "kill-port 3001 && npm run dev"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.10.4",
    "bcrypt": "^5.1.1",
    "connect-redis": "^8.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csurf": "^1.10.0",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "memorystore": "^1.6.7",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pg": "^8.13.1",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "raw-body": "^3.0.0",
    "redis": "^4.7.0",
    "stripe": "13.7.0",
    "winston": "^3.17.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/csurf": "^1.11.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.1",
    "@types/node": "^20.17.10",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.11.10",
    "esbuild": "^0.24.0",
    "kill-port": "^2.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
